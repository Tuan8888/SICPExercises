;; Exercise 1.30
;; 迭代版的sigma
#lang racket

(define (sum term a next b)
  (define (sum-iter term a next b res)
    (if (> a b)
        res
        (sum-iter term (next a) next b (+ res (term a)))))
  (sum-iter term a next b 0))

(define (pi-sum a b)
  (if (> a b)
      0
      (+ (/ 1.0 (* a (+ a 2))) (pi-sum (+ a 4 b))))
  
