;square root by newton's method
#lang racket

;square of input
(define (square x)
  (* x x))

;the 
(define (good-enough? guess x)  (< (abs (- (square guess) x)) 0.001))

(define (improve guess x)
  (average guess (/ x guess)))

(define (average x y)
  (/ (+ x y) 2))

(define (sqrt-iter guess x)
  (begin
    (if (good-enough? guess x)
        guess
        (sqrt-iter (improve guess x) x))))

(define (sqrt x)
  (sqrt-iter 1.0 x))
