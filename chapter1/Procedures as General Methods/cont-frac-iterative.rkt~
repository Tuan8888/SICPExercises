;; Exercise 1.37
;; 递归，近似计算无限连续小数
#lang racket

(define (cont-frac-iterative d n k)
  (define (cont-frac-iterative-iter i res)
    (if (= i 0)
        res
        (cont-frac-iterative-iter (+ i 1)
                                  (/ (n k)
                                     (+ (d k) res)))))
  (cont-frac-recursive-iter k))

(cont-frac-recursive (lambda (i) 1.0)
                     (lambda (i) 1.0)
                     11)
